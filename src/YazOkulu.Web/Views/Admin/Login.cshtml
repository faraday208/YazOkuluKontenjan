@{
    ViewData["Title"] = "Admin Girişi";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>Admin Girişi</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-4">
                <div class="text-center mb-4">
                    <img src="~/images/halic-logo.svg" alt="Haliç Üniversitesi" style="height: 80px;">
                    <h5 class="mt-3">Haliç Üniversitesi</h5>
                </div>
                <div class="card">
                    <div class="card-header bg-dark text-white">
                        <h4 class="mb-0">Admin Paneli</h4>
                    </div>
                    <div class="card-body">
                        @if (TempData["ErrorMessage"] != null)
                        {
                            <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
                        }
                        <form asp-action="Login" method="post">
                            <div class="mb-3">
                                <label class="form-label">Kullanıcı Adı</label>
                                <input type="text" name="username" class="form-control" required />
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Şifre</label>
                                <input type="password" name="password" class="form-control" required />
                            </div>
                            <button type="submit" class="btn btn-dark w-100">Giriş</button>
                        </form>
                        <hr/>
                        <small class="text-muted">Varsayılan: admin / Admin123!</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
