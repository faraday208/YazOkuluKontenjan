@model YazOkulu.Application.DTOs.Courses.CourseDto
@{
    ViewData["Title"] = "Ders Düzenle";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Ders Düzenle</h2>
        <a asp-action="Index" class="btn btn-secondary">Geri Dön</a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
    }

    <div class="card">
        <div class="card-body">
            <form asp-action="Edit" asp-route-id="@Model.Id" method="post">
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Ders Kodu</label>
                        <input type="text" name="Code" class="form-control" value="@Model.Code" required />
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Ders Adı</label>
                        <input type="text" name="Name" class="form-control" value="@Model.Name" required />
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Bölüm</label>
                        <input type="text" name="Department" class="form-control" value="@Model.Department" required />
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Fakülte</label>
                        <input type="text" name="Faculty" class="form-control" value="@Model.Faculty" required />
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Öğretim Üyesi</label>
                        <input type="text" name="Instructor" class="form-control" value="@Model.Instructor" required />
                    </div>
                    <div class="col-md-3 mb-3">
                        <label class="form-label">Kredi</label>
                        <input type="number" name="Credits" class="form-control" value="@Model.Credits" required min="1" max="10" />
                    </div>
                    <div class="col-md-3 mb-3">
                        <label class="form-label">Kontenjan</label>
                        <input type="number" name="Quota" class="form-control" value="@Model.Quota" required min="1" max="200" />
                    </div>
                </div>

                <div class="d-flex justify-content-end gap-2">
                    <a asp-action="Index" class="btn btn-secondary">İptal</a>
                    <button type="submit" class="btn btn-primary">Kaydet</button>
                </div>
            </form>
        </div>
    </div>
</div>
